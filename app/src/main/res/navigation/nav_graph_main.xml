<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/nav_coin_list_fragment">

    <fragment
        android:id="@+id/nav_coin_list_fragment"
        android:name="com.metinvandar.cryptotrackerapp.presentation.coin_list.CoinListFragment"
        android:label="@string/coin_list_fragment_label"
        tools:layout="@layout/fragment_coin_list">

        <action
            android:id="@+id/nav_action_coin_list_to_set_alert"
            app:destination="@id/nav_fragment_set_alert"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_from_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_from_right">

            <argument
                android:name="coin"
                app:argType="com.metinvandar.cryptotrackerapp.domain.model.CoinDomainModel" />

        </action>
    </fragment>
    <fragment
        android:id="@+id/nav_fragment_set_alert"
        android:name="com.metinvandar.cryptotrackerapp.presentation.set_alert.SetAlertFragment"
        android:label="@string/set_alert_fragment_label"
        tools:layout="@layout/fragment_set_alert">

        <action
            android:id="@+id/nav_action_set_alert_to_history"
            app:destination="@id/nav_fragment_history"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_from_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_from_right" >
            <argument
                android:name="coinId"
                app:argType="string" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/nav_fragment_history"
        android:name="com.metinvandar.cryptotrackerapp.presentation.coin_history.CoinHistoryFragment"
        android:label="@string/coin_history_fragment_label"
        tools:layout="@layout/fragment_coin_history" />
</navigation>
